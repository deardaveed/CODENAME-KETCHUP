mixin field(labelText, fieldName, fieldValue, fieldType = 'text', fieldClass = 'form-control')
  div(class='form-group')
    label(for=fieldName)= labelText
    input(type=fieldType id=fieldName name=fieldName value=fieldValue class=fieldClass)

mixin validationErrorSummary(errors)
  if errors
    div
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
