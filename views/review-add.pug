extends layout.pug

include utils.pug

block content
	div(align='center')
		.review__title-show= show.title
		img(src=`${show.poster}` alt=`Poster for ${show.title}`)

	form(action=`/shows/${id}/reviews` method='post')
		div(class='form-group')
			input(type='hidden' name='_csrf' value=csrfToken)

			p: p
			label(for='content') Add Review:
			br
			textarea(id='content' name='content' value=review.content cols='75' rows='10')

			p
			label(for='userRating') User Ketchup Rating (10🥫 is best):
			br
			select(name='userRating' id='userRating')
				option(value=none selected disabled hidden) 🥫 Rate This Show!
				option(value=1) 1 🥫
				option(value=2) 2 🥫
				option(value=3) 3 🥫
				option(value=4) 4 🥫
				option(value=5) 5 🥫
				option(value=6) 6 🥫
				option(value=7) 7 🥫
				option(value=8) 8 🥫
				option(value=9) 9 🥫
				option(value=10) 10 🥫

		//- input(type='number' id='userRating' name='userRating' value=review.userRating)

		//- +field('Review content:', 'content', review.content, 'textarea')
		//- +field('Ketchup Rating:', 'userRating', review.userRating, 'number')
		p
		div(class='py-4')
			button(type='submit').review-btn Add Show Review
			p: a(href=`/shows/${id}`).review-btn Cancel
