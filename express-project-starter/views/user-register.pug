//- ./views/user-register.pug

extends layout.pug

include utils.pug

block content
	+validationErrorSummary(errors)
	form(action='/users/register' method='post')
		input(type='hidden' name='_csrf' value=csrfToken)
		+field('User Name', 'userName', user.userName, 'text')
		+field('Email Address', 'email', user.email, 'text')
		+field('Password', 'password', user.hashedPassword, 'password')
		+field('Confirm Password', 'confirmPassword', '', 'password')

		div(class='py-4')
			button(type='submit' class='btn btn-primary') Register
			a(href='/' class='btn btn-warning ml-2') Cancel
